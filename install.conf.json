[
    {
        "defaults": {
            "link": {
                "relink": true,
                "force" : true
            }
        }
    },
    {
        "clean": ["~"]
    },
    {
        "link": {
			"~/.tmux.conf": "tmux.conf",
			"~/.tmux-themepack" : "tmux-themepack",
            "~/.atom/config.cson": "atom/config.cson",
            "~/.atom/keymap.cson": "atom/keymap.cson"
        }
    },
    {
        "shell": [
            {
                "command":"vim +PluginInstall +qall",
                "stdout" : true,
                "description":"Installing vim packages."
            },
            ["apm install --packages-file atom-package-list.txt","Installing atom packages"]
        ]
    }
]
