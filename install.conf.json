[
    {
        "defaults": {
            "link": {
                "relink": true,
                "force" : true
            }
        }
    },
    {
        "clean": ["~"]
    },
    {
        "link": {
            "~/.vimrc": "vimrc",
            "~/.vim": "vim",
            "~/.ycm_extra_conf.py": "ycm_extra_conf.py",
            "~/.config/omf/theme": "config/omf/theme",
            "~/.atom/config.cson": "atom/config.cson",
            "~/.atom/keymap.cson": "atom/keymap.cson",
            "~/.config/fish/config.fish": "config/fish/config.fish",
            "~/Pictures/Wallpapers": "Wallpapers"
        }
    },
    {
        "shell": [
            {
                "command":"vim +PluginInstall +qall",
                "stdout" : true,
                "description":"Installing vim packages."
            },
            {
                "command": "./vim/bundle/YouCompleteMe/install.py --clang-completer --gocode-completer --tern-completer",
                "stdout": true,
                "description":"Installing YouCompleteMe..."
            },
            ["apm install --packages-file atom-package-list.txt","Installing atom packages"],
            ["dconf load / < database.dconf", "Setting up dconf database"]
        ]
    }
]
