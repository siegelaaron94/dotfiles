[
    {
        "defaults": {
            "link": {
                "relink": true
            }
        }
    },
    {
        "clean": ["~"]
    },
    {
        "shell": [
            ["git pull;git submodule update;git submodule init","Setting up submodules"],
            ["sudo apt-get update", "Updating package cache"],
            ["sudo apt-get -y install build-essential cmake curl fish git python-dev python-pip", "Installing system development packages"],
            ["sudo pip install pip --upgrade", "Upgrading pip"],
            ["sudo pip install conan autopep8 jedi", "Installing python development packages"],

            ["wget -N https://atom.io/download/deb -O atom.deb;sudo dpkg -i atom.deb", "Installing newest version of atom"],
            ["apm install --packages-file atom-package-list.txt","Installing atom packages"],
            ["apm update", "Updating atom packages"],

            ["sudo apt-get install libappindicator1 libindicator7 libpango1.0-0 libpangox-1.0-0", "Install google chrome dependencies"],
            ["wget -N https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb -O google-chrome-stable_current_amd64.deb; sudo dpkg -i google-chrome-stable_current_amd64.deb", "Installing google chrome"],

            ["wget -N https://raw.githubusercontent.com/NicolasBernaerts/ubuntu-scripts/master/ubuntugnome/gnomeshell-extension-manage -O gnomeshell-extension-manage; chmod +x gnomeshell-extension-manage", "Downloading gnome shell extension manager"],

            ["sudo Flat-Plat/install.sh", "Installing Flat Plat gnome shell theme"],
            ["sudo rm -rf \"/usr/share/icons/Flat Remix\";sudo cp -r \"Flat-Remix/Flat Remix\" /usr/share/icons", "Installing Flat Remix icon theme"],
            ["./gnomeshell-extension-manage --install --extension-id 307", "Installing gnome shell dash to dock extension"],

            ["dconf load / < database.dconf", "Setting up dconf database"]
        ]
    },
    {
        "shell":[
            {
                "command":"oh-my-fish/bin/install --offline -y",
                "stdout":true,
                "description": "Installing oh-my-fish"
            },
            {
                "command":"fish -c omf install robbyrussell",
                "stdout":true,
                "description": "Installing robbyrussell theme"
            }
        ]
    },
    {
        "link": {
            "~/.atom/config.cson": "atom/config.cson",
            "~/.atom/keymap.cson": "atom/keymap.cson",
            "~/.config/fish/config.fish": "config/fish/config.fish",
            "~/Pictures/Wallpapers": "Wallpapers"
        }
    }
]
