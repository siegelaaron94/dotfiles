[
    {
        "defaults": {
            "link": {
                "relink": true
            }
        }
    },
    {
        "clean": ["~"]
    },
    {
        "link": {
            "~/.atom/config.cson": "atom/config.cson",
            "~/.atom/keymap.cson": "atom/keymap.cson",
            "~/.config/fish/config.fish": "config/fish/config.fish"
        }
    },
    {
        "shell": [
            {
                "command":"oh-my-fish/bin/install --offline -y",
                "stdout":true,
                "description": "Installing oh-my-fish"
            },
            ["sudo apt-get -y install build-essential cmake curl fish git python-dev python-pip", "Installing system development packages"],
            ["sudo pip install pip --upgrade", "Upgrading pip"],
            ["sudo pip install conan autopep8 jedi", "Installing python development packages"],

            ["wget https://raw.githubusercontent.com/NicolasBernaerts/ubuntu-scripts/master/ubuntugnome/gnomeshell-extension-manage", "Downloading gnome shell extension manager"],

            ["sudo Flat-Plat/install.sh", "Installing Flat Plat gnome shell theme"],
            ["sudo rm -rf \"/usr/share/icons/Flat Remix\";sudo cp -r \"Flat-Remix/Flat Remix\" /usr/share/icons", "Installing Flat Remix icon theme"],
            ["./gnomeshell-extension-manage --install --extension-id 307", "Installing gnome shell dash to dock extension"],

            ["dconf load / < database.dconf", "Setting up dconf database"]
        ]
    }
]
